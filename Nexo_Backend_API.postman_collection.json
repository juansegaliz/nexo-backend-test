{
	"info": {
		"_postman_id": "nexo-backend-api",
		"name": "Nexo Backend API",
		"description": "Colección completa de endpoints para la API de Nexo Backend",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:5000",
			"type": "string"
		},
		{
			"key": "access_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "user_uuid",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Health",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/health",
							"host": ["{{base_url}}"],
							"path": ["health"]
						},
						"description": "Verifica que el servidor esté funcionando"
					},
					"response": []
				}
			]
		},
		{
			"name": "Auth",
			"item": [
				{
					"name": "Register",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const jsonData = pm.response.json();",
									"    pm.collectionVariables.set('user_uuid', jsonData.user_uuid);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"nombre\": \"Juan\",\n  \"apellido\": \"Pérez\",\n  \"email\": \"juan.perez@example.com\",\n  \"fecha_nacimiento\": \"1990-05-15\",\n  \"username\": \"juanperez\",\n  \"password\": \"MiPassword123!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": ["{{base_url}}"],
							"path": ["auth", "register"]
						},
						"description": "Registra un nuevo usuario.\n\nRequisitos:\n- Email único\n- Username único\n- Fecha de nacimiento (mayor de 18 años)\n- Password: mínimo 8 caracteres, una mayúscula, una minúscula, un número y un carácter especial"
					},
					"response": []
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    pm.collectionVariables.set('access_token', jsonData.access_token);",
									"    pm.collectionVariables.set('user_uuid', jsonData.user.user_uuid);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"juan.perez@example.com\",\n  \"password\": \"MiPassword123!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": ["{{base_url}}"],
							"path": ["auth", "login"]
						},
						"description": "Inicia sesión y obtiene un token de acceso"
					},
					"response": []
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{base_url}}/auth/logout",
							"host": ["{{base_url}}"],
							"path": ["auth", "logout"]
						},
						"description": "Cierra la sesión del usuario"
					},
					"response": []
				}
			]
		},
		{
			"name": "Users",
			"item": [
				{
					"name": "Get My Profile",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/users/me",
							"host": ["{{base_url}}"],
							"path": ["users", "me"]
						},
						"description": "Obtiene el perfil del usuario autenticado"
					},
					"response": []
				},
				{
					"name": "Update My Profile",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"nombre\": \"Juan Carlos\",\n  \"apellido\": \"Pérez García\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/users/me",
							"host": ["{{base_url}}"],
							"path": ["users", "me"]
						},
						"description": "Actualiza el perfil del usuario autenticado.\n\nCampos permitidos: nombre, apellido, email, fecha_nacimiento, username, password"
					},
					"response": []
				},
				{
					"name": "Upload Avatar",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "avatar",
									"type": "file",
									"src": [],
									"description": "Archivo de imagen (JPG, PNG, GIF, WEBP)"
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/users/me/avatar",
							"host": ["{{base_url}}"],
							"path": ["users", "me", "avatar"]
						},
						"description": "Sube o actualiza el avatar del usuario.\n\nFormatos permitidos: JPG, JPEG, PNG, GIF, WEBP\nTamaño máximo: 2MB (configurable)"
					},
					"response": []
				},
				{
					"name": "Get User by UUID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/users/:user_uuid",
							"host": ["{{base_url}}"],
							"path": ["users", ":user_uuid"],
							"variable": [
								{
									"key": "user_uuid",
									"value": "{{user_uuid}}",
									"description": "UUID del usuario a consultar"
								}
							]
						},
						"description": "Obtiene el perfil público de un usuario por su UUID (no requiere autenticación)"
					},
					"response": []
				},
				{
					"name": "Search Users",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/users/search?q=juan&limit=20&offset=0",
							"host": ["{{base_url}}"],
							"path": ["users", "search"],
							"query": [
								{
									"key": "q",
									"value": "juan",
									"description": "Término de búsqueda (nombre, apellido, username, email)"
								},
								{
									"key": "limit",
									"value": "20",
									"description": "Número máximo de resultados (máx: 50)"
								},
								{
									"key": "offset",
									"value": "0",
									"description": "Offset para paginación"
								}
							]
						},
						"description": "Busca usuarios por nombre, apellido, username o email"
					},
					"response": []
				}
			]
		},
		{
			"name": "Friends",
			"item": [
				{
					"name": "List Friends",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/friends?status=accepted",
							"host": ["{{base_url}}"],
							"path": ["friends"],
							"query": [
								{
									"key": "status",
									"value": "accepted",
									"description": "Filtrar por estado: pending, accepted, rejected, removed",
									"disabled": true
								}
							]
						},
						"description": "Lista las amistades del usuario autenticado.\n\nEstados posibles:\n- pending: Solicitud pendiente\n- accepted: Amistad aceptada\n- rejected: Solicitud rechazada\n- removed: Amistad removida"
					},
					"response": []
				},
				{
					"name": "Send Friend Request",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"to_user_uuid\": \"UUID_DEL_USUARIO_DESTINO\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/friends/request",
							"host": ["{{base_url}}"],
							"path": ["friends", "request"]
						},
						"description": "Envía una solicitud de amistad a otro usuario"
					},
					"response": []
				},
				{
					"name": "Accept Friend Request",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"user_uuid\": \"UUID_DEL_USUARIO_QUE_ENVIO_LA_SOLICITUD\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/friends/accept",
							"host": ["{{base_url}}"],
							"path": ["friends", "accept"]
						},
						"description": "Acepta una solicitud de amistad pendiente"
					},
					"response": []
				},
				{
					"name": "Reject Friend Request",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"user_uuid\": \"UUID_DEL_USUARIO_QUE_ENVIO_LA_SOLICITUD\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/friends/reject",
							"host": ["{{base_url}}"],
							"path": ["friends", "reject"]
						},
						"description": "Rechaza una solicitud de amistad pendiente"
					},
					"response": []
				},
				{
					"name": "Unfriend (Remove Friend)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"user_uuid\": \"UUID_DEL_AMIGO_A_REMOVER\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/friends/unfriend",
							"host": ["{{base_url}}"],
							"path": ["friends", "unfriend"]
						},
						"description": "Elimina una amistad aceptada"
					},
					"response": []
				}
			]
		}
	]
}
